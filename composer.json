{
    "name": "mad4n7/pix-qrcode",
    "description": "A PHP library for generating PIX (Brazilian Instant Payment System) QR codes",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.6",
        "chillerlan/php-qrcode": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Root\\PixImage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Arthur Silva",
            "email": "contact@arthursilva.com",
            "homepage": "https://arthursilva.com",
            "role": "Developer"
        }
    ],
    "keywords": [
        "pix",
        "qrcode",
        "payment",
        "brazil",
        "instant-payment"
    ],
    "support": {
        "issues": "https://github.com/mad4n7/pix-qrcode/issues",
        "source": "https://github.com/mad4n7/pix-qrcode",
        "docs": "https://arthursilva.com/pix-qrcode"
    }
}
